{% extends "baseAdmin.html.twig" %}

{% block title %}{{ app.request.attributes.get('_route') == 'fruits_create' ? 'création' : 'modification' }} produit{% endblock %}

{% block body %}
{# <h1>{{ form_title }}</h1> #}

    <h1 class="mb-5">{{ app.request.attributes.get('_route') == 'fruits_create' ? 'Créer' : 'Modifier' }} un produit</h1>

{{ form_start(fruitsForm) }}

        <div class="row">
            <div class="col-6">
                {# {{ form_row(productForm.name) }} #}
                {{ form_label(fruitsForm.name, 'Nom') }}
                {{ form_errors(fruitsForm.name) }}
                {{ form_widget(fruitsForm.name, {
                    'attr': {
                        'placeholder': 'Ex.: Jan'
                    }
                }) }}
                {{ form_help(fruitsForm.name) }}
            </div>
            <div class="col-3">
                {{ form_row(fruitsForm.poids, {
                    'label': 'Poids',
                    'attr': {
                        'placeholder': 'Ex.: 572g'
                    }
                }) }}
            </div>
            {# <div class="col-3">
                {{ form_row(fruitsForm.price, {
                    'label': 'Prix (en €)',
                    'attr': {
                        'placeholder': 'Ex.: 123.45'
                    }
                }) }}
            </div> #}
        </div>

        <div class="row">
            <div class="col-3">
                {{ form_row(fruitsForm.price, {
                    'label': 'Prix (en €)',
                    'attr': {
                        'placeholder': 'Ex.: 123.45'
                    }
                }) }}
            </div>
            <div class="col-3">
                {{ form_row(fruitsForm.description, {
                    'label': 'Description',
                    'attr': {
                        'placeholder': 'Ex.: Lorem ipsum dolor sit amet consectetur adipisicing elit. Expedita provident et quod. Vero aliquid praesentium earum eos, facilis doloremque tempora ab quidem incidunt ! Ea, dignissimos. Quas sed modi sapiente dolorem ?'

                    }
                }) }}
            </div>
        </div>

        <div class="row">
            <div class="col-12 text-end my-3">
                <a href="{{ path('admin_fruitss')}}" class="btn btn-outline-danger me-3">Annuler</a>
                <button class="btn btn-success">Créer</button>
            </div>
        </div>

    {{ form_end(fruitsForm) }}

{% endblock %}